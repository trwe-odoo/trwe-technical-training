<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="space_project_wizard_form_view">
            <field name="name">space.project.wizard.form</field>
            <field name="model">space.project.wizard</field>
            <field name="arch" type="xml">
                <form string="Create Project for Mission">
                    <footer>
                        <button name="create_space_project" type="object"
                                string="Create" class="oe_highlight"/>
                        or
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <!--
        <act_window id="launch_project_wizard" name="Create Project"
                    binding_model="mission" res_model="space.project.wizard"
                    view_mode="form" target="new"/>
        -->
        <record id="launch_project_wizard" model="ir.actions.act_window">
            <field name="name">Create Project</field>
            <field name="res_model">space.project.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>