<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="spaceship_view_form">
            <field name="name">spaceship.form</field>
            <field name="model">spaceship</field>
            <field name="arch" type="xml">
                <form string="Spaceship Form">
                    <sheet>
                        <h1><field name="name"/></h1>
                        <group>
                            <group>
                                <field name="ship_type"/>
                            </group>
                            <group>
                                <field name="num_passengers"/>
                            </group>
                            <group>
                                <field name="ship_width"/>
                                <field name="ship_length"/>
                            </group>
                            <group>
                                <field name="fuel_type"/>
                            </group>
                            <group>
                                <field name="active"/>
                            </group>
                            <notebook>
                                <page string="Missions">
                                    <field name="missions"/>
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="space_view_list">
            <field name="name">spaceship.list</field>
            <field name="model">spaceship</field>
            <field name="arch" type="xml">
                <tree string="Course List">
                    <field name="name"/>
                    <field name="ship_type"/>
                    <field name="num_passengers"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>